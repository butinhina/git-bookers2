

<!--ユーザーの詳細-->
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h6>name<%= @user.name %></h6>
  <h6>introduction<%= @user.introduction %></h6>
  <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
</div>

<!--プロフィール設定画像 -->
  <i class="fa-solid fa-user-gear"></i>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
      <% if @book.errors.any? %>
        <div id="error_explanation">
        <h2 class="main-error"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
         <ul>
         <% @book.errors.full_messages.each do |msg| %>
          <td><li class="main-error"><%= msg %></li></td>
         <% end %>
         </ul>
        </div>
      <% end %>

<div class="main-logo">
     <h2>NEW book</h2>
</div>
    <div id="main-list">
       <label for="book_title">Title</label><br>
      <%=f.text_field :title %>
    </div>
    <div id="main-list">
       <label for="book_body">Opinion</label><br>
       <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%=f.submit 'Create Book' %>
    </div>
<% end %>



    <h1>Books</h1>
    <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
    </thead>
<tbody>
<% @books.each do |book| %>
<div>
　<%= image_tag @user.get_profile_image(100,100) %>
  <%= link_to book_path(book.id) do %>
　<%= book.title %>
　<% end %>
　<%= book.body %>
</div>
<% end %>
</tbody>


