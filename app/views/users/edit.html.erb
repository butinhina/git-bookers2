<h2>User info</h2>
<%= form_with model: @user, local: true do |f| %>
<% if @user.errors.any? %>
        <div id="error_explanation">
        <h2 class="main-error"><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
         <ul>
         <% @user.errors.full_messages.each do |msg| %>
          <td><li class="main-error"><%= msg %></li></td>
         <% end %>
         </ul>
        </div>
<% end %>
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>


    <h5>Image</h5>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", assept: "image/*" %>

    <h5>Introduction</h5>
    <%= f.text_field :introduction %><br>

    <%= f.submit 'Update User' %>
<% end %>



