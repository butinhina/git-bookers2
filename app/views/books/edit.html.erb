<h1>Editing Book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
      <% if @book.errors.any? %>
        <div id="error_explanation">
        <h2 class="main-error"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
         <ul>
         <% @book.errors.full_messages.each do |msg| %>
          <td><li class="main-error"><%= msg %></li></td>
         <% end %>
         </ul>
        </div>
      <% end %>

    <div id="main-list">
       <label for="book_title">Title</label><br>
      <%=f.text_field :title %>
    </div>
    <div id="main-list">
       <label for="book_body">Opinion</label><br>
       <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%=f.submit 'Update Book' %>
    </div>

    <a href="book_path(@book)">Show</a>
    |
    <a href="books_path">Back</a>
<% end %>
<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
<% end %>
    <p id="notice"></p>

