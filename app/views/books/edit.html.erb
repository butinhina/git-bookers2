<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
        <h3 class="main-error"><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
         <ul>
         <% @book.errors.full_messages.each do |msg| %>
          <td><li class="main-error"><%= msg %></li></td>
         <% end %>
         </ul>
        </div>
    <% end %>
    <div id="main-list">
       <label for="book_title">Title</label><br>
      <%=f.text_field :title %>
    </div>
    <div id="main-list">
       <label for="book_body">Opinion</label><br>
       <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%=f.submit 'Update Book' %>
    </div>
  <% end %>

    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
<% end %>
    <p id="notice"></p>


