
<%= form_with model: book, url: books_path, method: :post do |f| %>

    <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, class: "col-xs-12" %>
    </div>

    <div class="form-group">
       <%= f.label :body %>
       <%= f.text_area :body, class: "col-xs-12" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Book', class: "col-xs-12" %>
    </div>

<% end %>


